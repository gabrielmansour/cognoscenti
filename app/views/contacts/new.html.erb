<h2>Add a new Expert to the directory</h2>

<%= form_for @contact do |f| %>
  <div class="input-field">
    <%= f.text_field :name, placeholder: 'Viola Davis', class: 'validate' %>
    <%= f.label :name %>
  </div>

  <div class="input-field">
    <%= f.url_field :url, class: 'validate' %>
    <%= f.label :url, "Website URL" %>
  </div>

  <div>
    <%= f.button '<i class="material-icons left">add_circle</i>Add Expert'.html_safe, class: 'btn btn-large', type: :submit %>
  </div>
<% end %>
